    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^23.0.1",
    "postcss": "^8.4.33",
    "vite": "^5.4.3",
    "vitepress": "^1.3.4",
    "vitest": "^1.0.4",
    "vue": "^3.3.11"
