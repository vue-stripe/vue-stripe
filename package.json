{
  "name": "@vue-stripe/vue-stripe",
  "description": "Vue.js composables & components for Stripe",
  "author": "jofftiquez@gmail.com",
  "version": "5.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/vue-stripe.umd.js",
  "module": "./dist/vue-stripe.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-stripe.es.js",
      "require": "./dist/vue-stripe.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
