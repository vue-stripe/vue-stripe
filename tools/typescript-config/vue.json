{
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["vite/client", "vitest/globals"],
    "allowImportingTsExtensions": true,
    "paths": {
      "vue": ["./node_modules/vue-demi/lib/index.d.ts"]
